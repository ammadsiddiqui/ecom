<div class="login-box">
  <div class="login-box-body">
    <p class="login-box-msg">Sign in to start your session</p>
    <%= form_tag admin_sessions_path, id: "login_form" do  %>
      <div class="form-group has-feedback">
        <%= label_tag :email %>
        <%= text_field_tag :email,params[:email], :class => "form-control", :maxlength => 30%>
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <%= label_tag :password %>
        <%= password_field_tag :password,params[:password], :class => "form-control", :maxlength => 16 %>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <div class="row">
        <div class="col-xs-6">
          <div class="checkbox icheck">
            <label>
              <input type="checkbox"> Remember me
            </label>
          </div>
        </div>
        <div class="col-xs-6">
          <div class="pass">
            <%= link_to 'Forgot password',  forget_password_admin_sessions_path %>
          </div>
        </div>
      </div>  
      <div class="row">
        <div class="col-xs-12">
          <input name="role" value="admin" hidden></input>
          <br><%= submit_tag "Sign In", :class => "btn btn-primary btn-block btn-flat" %>
        </div>
      </div> <!--row end-->
    <% end %>
  </div>
</div>



<script>
   
jQuery(document).ready(function(){
  
  jQuery("#login_form").validate({
 
    
    rules: {
      
      "email":{
        required: true,
        emailRegex: true,
        maxlength: 50
      },

      "password":{
        required: true,
        minlength: 8,
        maxlength: 32
      }  
         
    },
   
  });

  jQuery.validator.addMethod("emailRegex", function(value, element) { 
    return this.optional(element) || /^[A-Z0-9_]+([\.][A-Z0-9_]+)*@[A-Z0-9-]+(\.[a-zA-Z]{2,3})+$/i.test(value);
  }, "Please enter a valid email address.");



});


</script>
